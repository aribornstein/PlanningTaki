{
  "version": 2,

  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "client/dist/**" 
      }
    }
  ],

  "routes": [
    { "src": "/socket.io/(.*)", "dest": "server/server.js" }, 
    { "src": "/(.*)",              "dest": "server/server.js" }
  ]
}